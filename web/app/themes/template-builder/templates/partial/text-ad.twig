<div class="uk-width-1-1">
  <div class="uk-container">

    {% if tb.style_preview == 'big-text-description-link' %}
    <div uk-grid>
      <div class="text-ad big-text-description-link">
        <div class="hightlights">
          <span>{{tb.big_text}}</span>
        </div>
        <div>
          <p>{{tb.description}} - <a href="{{tb.url}}" target="{{ tb.open_in_new_tab ? '_blank' : '_self' }}">{{tb.link_label}}</a></p>
        </div>
      </div>
    </div>
    {% elseif tb.style_preview == 'description-button' %}
    <div class="text-ad uk-flex-middle description-button" uk-grid>
      <div class="uk-width-2-3@s">
        <p>{{tb.description}}</p>
      </div>
      <div class="uk-width-1-3@s">
        <a class="uk-button uk-button-primary uk-width-1-1" href="{{tb.url}}" target="{{ tb.open_in_new_tab ? '_blank' : '_self' }}">{{tb.button_label}}</a>
      </div>
    </div>
    {% endif %}
    
  </div>
</div>